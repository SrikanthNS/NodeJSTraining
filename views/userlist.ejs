<html>
<head>
<title><%= title %></title>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script> 
<script>
	function doLogout(){
		location="/login";
	}
	function doHome(){
		location="/home";
	}
	function doUserList(){
		location="/api/userlist";
	}
	function doAboutus(){
		location="/aboutus";
	}
    function doEdit(id){
        location="/api/editUser/"+id;
    }
    function doDelete(id){
        $.get("/api/deleteuser/"+id,function(data){        
            if(data==='success')           
            {
                //alert("login success");
                location="/api/userlist?"+id;   
            }
        });
    }
    function doAdd(){
        location="/user-add";
    }
</script>
</head>
<body>
    <H2><%= title %></H2>
    <H3><%= page %></H3>
    <button type="" onclick="doAdd()" style="background:#FF9900;color:white;">+ Add</button> |
    <button type="" onclick="doHome()" style="background:#FF9900;color:white;">Home</button> | 
    <button type="" onclick="doUserList()" style="background:#FF9900;color:white;">Users</button> | 
    <button type="" onclick="doAboutus()" style="background:#FF9900;color:white;">About</button> | 
    <button type="" onclick="doLogout()" style="background:red;color:white;">Logout</button>
    <hr>
         <div>
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="40px">Id</th>
                    <th width="180px">Name</th>
                    <th width="200px">Email</th>
                    <th>Phone</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                               
                <% if(data.length){                                 
                 for(var i = 0;i < data.length;i++) { %>       
                <tr>
                    <td><%=data[i].id%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].email%></td>
                    <td><%=data[i].phone%></td>            
                    <td><button style="background:#00CC00;color:white;" onclick="doEdit(<%=data[i].id%>);" >Edit</button></td>
                    <td><button style="background:#D23641;color:white;" onclick="doDelete(<%=data[i].id%>);">Delete</button></td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="7">No users</td>
                 </tr>
            <% } %> 
            </table>
         </div>
</body>
</html>